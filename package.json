{
  "name": "thai-master-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Thai Master - Script-first Thai language learning application",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:fuse && npm run build:app",
    "build:fuse": "npm run build --workspace=@thai-master/fuse",
    "build:app": "npm run build --workspace=@thai-master/app",
    "dev": "npm run dev --workspace=@thai-master/app",
    "dev:fuse": "npm run dev --workspace=@thai-master/fuse",
    "test": "npm run test --workspace=@thai-master/fuse && npm run test --workspace=@thai-master/app",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:e2e": "npm run test:e2e --workspace=@thai-master/app",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@vitest/ui": "^2.0.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "thai",
    "language-learning",
    "education",
    "pwa"
  ],
  "author": "thaieager",
  "license": "MIT"
}
